## -*- coding: utf-8 -*-
<%namespace name="helper" file="post_helper.tmpl"/>
<%namespace name="pheader" file="post_header.tmpl"/>
<%namespace name="comments" file="comments_helper.tmpl"/>
<%inherit file="post.tmpl"/>

<%block name="content">
<div class="site__page theme-card mdl-grid">
    <div class="mdl-card mdl-cell mdl-cell--12-col">
        <article class="storypage" itemscope="itemscope" itemtype="http://schema.org/Article">
            ${pheader.html_title()}
            ${pheader.html_translations(post)}
            <div class="mdl-color-text--grey-700 mdl-card__supporting-text e-content entry-content" itemprop="articleBody text">
                ${post.text()}
            </div>
            %if site_has_comments and enable_comments and not post.meta('nocomments'):
            <div class="mdl-color-text--primary-contrast mdl-card__supporting-text comments hidden-print">
                <h2>${messages("Comments")}</h2>
                ${comments.comment_form(post.permalink(absolute=True), post.title(), post.base_path)}
            </div>
            %endif
            ${helper.mathjax_script(post)}
        </article>
    </div>
</div>
</%block>

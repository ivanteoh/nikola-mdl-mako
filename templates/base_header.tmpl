## -*- coding: utf-8 -*-
<%namespace name="base" file="base_helper.tmpl" import="*"/>

<%def name="html_header()">
    <header id="header" class="mdl-layout__header">
        <div class="mdl-layout__header-row">
            ${html_site_title()}
            <div class="mdl-layout-spacer"></div>
            %if search_form:
                <div class="searchform" role="search">
                    ${search_form}
                </div>
            %endif
        </div>
        ${html_translation_header()}
    </header>
    ${html_navigation_links()}
    ${template_hooks['page_header']()}
</%def>

<%def name="html_site_title()">
    %if logo_url:
        <div class="mdl-layout-icon">
            <img src="${logo_url}" alt="${blog_title|h}" id="logo">
        </div>
    %endif
    <h1 id="brand"><a href="${abs_link(_link("root", None, lang))}" title="${blog_title|h}" rel="home">
        % if show_blog_title:
            <span id="blog-title" class="mdl-layout-title">${blog_title|h}</span>
        % endif
    </a></h1>
</%def>

<%def name="html_navigation_links()">
    <div class="mdl-layout__drawer">
    % if show_blog_title:
        <span class="mdl-layout-title">${blog_title|h}</span>
    % endif
    <nav class="mdl-navigation">
          <a class="mdl-navigation__link" href="#">Hello</a>
    %for url, text in navigation_links[lang]:
        % if isinstance(url, tuple):
            ${text}
        % else:
            <a class="mdl-navigation__link" href="${url}">${text}</a></li>
        % endif
    %endfor
    ${template_hooks['menu']()}
    ${template_hooks['menu_alt']()}
    </ul>
    </nav>
</%def>

<%def name="html_translation_header()">
    %if len(translations) > 1:
        <div id="toptranslations">
            <h2>${messages("Languages:")}</h2>
            ${base.html_translations()}
        </div>
    %endif
</%def>

## -*- coding: utf-8 -*-
<%namespace name="base" file="base_helper.tmpl" import="*"/>

<%def name="html_header()">
    <header id="header" class="mdl-layout__header site-header
    %if mdl__header_scroll:
mdl-layout__header--scroll
    %endif
    %if mdl__header_waterfall:
mdl-layout__header--waterfall
    %endif
    %if mdl__header_waterfall_hide_top:
mdl-layout__header--waterfall-hide-top
    %endif
    %if mdl__header_transparent:
mdl-layout__header--transparent
    %endif
    %if mdl__header_seamed:
mdl-layout__header--seamed
    %endif
    ">
        %if logo_url:
            <div class="mdl-layout-icon">
                <img src="${logo_url}" alt="${blog_title|h}" id="logo">
            </div>
        %endif
        <div class="mdl-layout__header-row title-row">
            ${html_site_title()}
        %if mdl__multiple_header:
        </div>
        <div class="mdl-layout__header-row navigation-row
        %if mdl__navigation_large_screen_only:
mdl-layout--large-screen-only
        %endif
        ">
        %else:
            <div class="mdl-layout-spacer"></div>
        %endif
            %if top_nav_header:
            <nav class="mdl-navigation">
              %for url, text in navigation_links[lang]:
                  %if rel_link(permalink, url) == "#":
                      <a class="mdl-navigation__link active" href="${permalink}">${text} <span class="sr-only">${messages("(active)", lang)}</span></a>
                  %else:
                      <a class="mdl-navigation__link" href="${url}">${text}</a>
                  %endif
              %endfor
              ${template_hooks['menu']()}
              ${template_hooks['menu_alt']()}
            </nav>
            %endif
            %if search_form:
                <div class="searchform" role="search">
                    ${search_form}
                </div>
            %endif
            ${html_more_button()}
        </div>
    </header>
    ${html_navigation_links()}
    ${template_hooks['page_header']()}
</%def>

<%def name="html_site_title()">
    <h1 id="brand" class="mdl-layout-title"><a href="${abs_link(_link("root", None, lang))}" title="${blog_title|h}" rel="home">
    % if show_blog_title:
        <span id="blog-title">${blog_title|h}</span>
    % endif
    </a></h1>
</%def>

<%def name="html_navigation_links()">
    <div class="mdl-layout__drawer
    %if mdl__drawer_small_screen_only:
mdl-layout--small-screen-only
    %endif
    ">
        <h1 class="mdl-layout-title"><a href="${abs_link(_link("root", None, lang))}" title="${blog_title|h}" rel="home">
        %if show_blog_title:
            <span>${blog_title|h}</span>
        %endif
        </a></h1>
        <nav class="mdl-navigation">
            %for url, text in navigation_links[lang]:
                %if rel_link(permalink, url) == "#":
                    <a class="mdl-navigation__link active" href="${permalink}">${text} <span class="sr-only">${messages("(active)", lang)}</span></a>
                %else:
                    <a class="mdl-navigation__link" href="${url}">${text}</a>
                %endif
            %endfor
            ${template_hooks['menu']()}
            ${template_hooks['menu_alt']()}
        </nav>
    </div>
</%def>

<%def name="html_more_button()">
    %if len(translations) > 1 or more_button_header:
        <button id="more-button"
                class="mdl-button mdl-js-button mdl-button--icon mdl-js-ripple-effect">
            <i class="material-icons">more_vert</i>
        </button>
        <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
            for="more-button">
            %if more_button_header:
                %for url, title, text in more_button_header:
                <li class="mdl-menu__item">
                    <a href="${url}" title="${title}" >${text}</a>
                </li>
                %endfor
            %endif
            %if len(translations) > 1:
                <li class="mdl-menu__item">${messages("Languages:")}</li>
                <li class="mdl-menu__item">${base.html_translations()}</li>
            %endif
        </ul>
    %endif
</%def>

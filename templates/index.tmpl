## -*- coding: utf-8 -*-
<%namespace name="helper" file="index_helper.tmpl"/>
<%namespace name="comments" file="comments_helper.tmpl"/>
<%inherit file="base.tmpl"/>

<%block name="extra_head">
    ${parent.extra_head()}
    % if posts and (permalink == '/' or permalink == '/' + index_file):
        <link rel="prefetch" href="${posts[0].permalink()}" type="text/html">
    % endif
</%block>

<%block name="content">
<div class="theme-blog__posts theme-card mdl-grid">
<%block name="content_header"></%block>
<div class="postindex">
% for post in posts:
<div class="mdl-card mdl-cell mdl-cell--12-col mdl-shadow--4dp">
    % if post_type:
        <button class="mdl-button mdl-js-button mdl-button--fab mdl-color--accent">
            <i class="material-icons mdl-color-text--white" role="presentation">
                ${post_type[post.meta('type')]}
            </i>
            <span class="visuallyhidden">${post.meta('type')}</span>
        </button>
    % endif
    <article class="h-entry">
    <div class="mdl-card__media post-${post.meta('type')}"></div>
    <div class="mdl-card__title">
        <header>
        <h1 class="p-name entry-title"><a href="${post.permalink()}" class="u-url">${post.title()|h}</a></h1>
        </header>
    </div>
    %if index_teasers:
    <div class="mdl-color-text--grey-700 mdl-card__supporting-text p-summary entry-summary">
    ${post.text(teaser_only=True)}
    %else:
    <div class="mdl-color-text--grey-700 mdl-card__supporting-text e-content entry-content">
    ${post.text(teaser_only=False)}
    %endif
    </div>
    <div class="mdl-color-text--grey-700 mdl-card__supporting-text meta">
        <div><button class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored">${"".join([x[0].upper() for x in post.author().split()])}</button></div>
        <div>
            <strong class="metadata byline author vcard">
                <span class="byline-name fn">
                % if author_pages_generated:
                    <a href="${_link('author', post.author())}">${post.author()|h}</a>
                % else:
                    ${post.author()|h}
                % endif
                </span>
            </strong>
            <span class="metadata dateline">
                <time class="published dt-published" datetime="${post.formatted_date('webiso')}" title="${post.formatted_date(date_format)|h}">${post.formatted_date(date_format)|h}</time>
            </span>
        </div>
        <div class="section-spacer"></div>
        % if not post.meta('nocomments') and site_has_comments:
        <div class="meta__comment">
            <span class="metadata commentline">
                ${comments.comment_link(post.permalink(), post._base_path)}
            </span>
        </div>
        % endif
    </div>
    </article>
</div>
% endfor
</div>
${helper.html_pager()}
${comments.comment_link_script()}
${helper.mathjax_script(posts)}
</div>
</%block>

## -*- coding: utf-8 -*-
<%inherit file="base.tmpl"/>

<%block name="content">
<div class="site__page theme-card mdl-grid">
    <div class="mdl-card mdl-cell mdl-cell--12-col mdl-shadow--4dp">
        <article class="tag-index">
            <div class="mdl-card__media"></div>
            <div class="mdl-card__title">
                <header>
                    <h1>${title|h}</h1>
                </header>
            </div>
            <div class="mdl-grid mdl-color-text--grey-700 mdl-card__supporting-text">
            % if cat_items:
                % if items:
                    <h2 class="mdl-cell mdl-cell--12-col">${messages("Categories")}</h2>
                % endif
                % for text, full_name, path, link, indent_levels, indent_change_before, indent_change_after in cat_hierarchy:
                    % for i in range(indent_change_before):
                        <ul class="mdl-cell mdl-cell--12-col mdl-list tag-index-categories">
                    % endfor
                    <li class="mdl-list__item"><a class="reference" href="${link}">${text}</a>
                    % if indent_change_after <= 0:
                        </li>
                    % endif
                    % for i in range(-indent_change_after):
                        </ul>
                        % if i + 1 < len(indent_levels):
                            </li>
                        % endif
                    % endfor
                % endfor
                % if items:
                    <h2 class="mdl-cell mdl-cell--12-col">${messages("Tags")}</h2>
                % endif
            %endif
            % if items:
                <ul class="mdl-cell mdl-cell--12-col mdl-list tag-index-tags">
                % for text, link in items:
                    % if text not in hidden_tags:
                        <li class="mdl-list__item"><a class="reference listtitle" href="${link}">${text|h}</a></li>
                    % endif
                % endfor
                </ul>
            % endif
            </div>
        </article>
    </div>
</div>
</%block>

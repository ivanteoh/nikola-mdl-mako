## -*- coding: utf-8 -*-

<%def name="html_headstart()">
<!DOCTYPE html>
<html \
prefix='\
%if use_open_graph or (twitter_card and twitter_card['use_twitter_cards']):
og: http://ogp.me/ns# article: http://ogp.me/ns/article# \
%endif
%if comment_system == 'facebook':
fb: http://ogp.me/ns/fb#
%endif
' \
%if use_open_graph or (twitter_card and twitter_card['use_twitter_cards']):
vocab="http://ogp.me/ns" \
%endif
% if is_rtl:
dir="rtl" \
% endif
\
lang="${lang}">
<head>
    <meta charset="utf-8">
    % if use_base_tag:
    <base href="${abs_link(permalink)}">
    % endif
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    %if description:
    <meta name="description" content="${description|h}">
    %endif
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0">
    %if title == blog_title:
        <title>${blog_title|h}</title>
    %else:
        <title>${title|h} | ${blog_title|h}</title>
    %endif

    %if mdl__roboto_font:
        <link rel="stylesheet" type="text/css"
              href="/assets/vendor/mdl/css/roboto.css">
    %endif
    ${html_stylesheets()}
    <link rel="stylesheet" type="text/css"
          href="/assets/vendor/mdl/css/material-icons.css">

    ${html_feedlinks()}
    <link rel="canonical" href="${abs_link(permalink)}">

    %if favicons:
        %for name, file, size in favicons:
            <link rel="${name}" href="${file}" sizes="${size}"/>
        %endfor
    %endif

    % if comment_system == 'facebook':
        <meta property="fb:app_id" content="${comment_system_id}">
    % endif

    %if prevlink:
        <link rel="prev" href="${prevlink}" type="text/html">
    %endif
    %if nextlink:
        <link rel="next" href="${nextlink}" type="text/html">
    %endif

    ${mathjax_config}
    ${extra_head_data}
</%def>

<%def name="late_load_js()">
    %if mdl__version:
        <script defer type="text/javascript"
            src="https://code.getmdl.io/${mdl__version}/material.min.js">
        </script>
    %else:
        <script defer type="text/javascript"
            src="/assets/vendor/mdl/js/material.min.js">
        </script>
    %endif
    <script async type="text/javascript"
        src="/assets/vendor/jquery/jquery-3.1.1.slim.min.js">
    </script>
    %if image_plugin and image_plugin == 'lightbox':
        <script defer type="text/javascript"
            src="/assets/vendor/lightbox/js/lightbox.min.js">
        </script>
    %endif
    %if image_plugin and image_plugin == 'colorbox':
        <script defer type="text/javascript"
            src="/assets/vendor/colorbox/js/jquery.colorbox-min.js">
        </script>
        %if colorbox_locales[lang]:
            <script defer type="text/javascript"
                src="/assets/vendor/colorbox/js/colorbox-i18n/jquery.colorbox-${colorbox_locales[lang]}.js">
            </script>
        %endif
    %endif
    ${social_buttons_code}
</%def>

<%def name="html_stylesheets()">
    %if mdl__version:
        %if mdl__color_scheme:
            <link defer rel="stylesheet"
                  href="https://code.getmdl.io/${mdl__version}/material.${mdl__color_scheme}.min.css">
        %else:
            <link defer rel="stylesheet"
                  href="https://code.getmdl.io/${mdl__version}/material.indigo-pink.min.css">
        %endif
    %else:
        %if mdl__color_scheme:
            <link defer rel="stylesheet"
                  href="https://code.getmdl.io/1.3.0/material.${mdl__color_scheme}.min.css">
        %else:
            <link defer rel="stylesheet"
                  href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css">
        %endif
    %endif
    %if image_plugin and image_plugin == 'lightbox':
        <link href="/assets/vendor/lightbox/css/lightbox.min.css" rel="stylesheet"
            type="text/css">
    %endif
    %if image_plugin and image_plugin == 'colorbox':
        <link href="/assets/vendor/colorbox/css/colorbox.min.css" rel="stylesheet"
            type="text/css">
    %endif
    %if use_bundles:
        %if use_cdn:
            <link href="/assets/css/all.css" rel="stylesheet" type="text/css">
        %else:
            <link href="/assets/css/all-nocdn.css" rel="stylesheet" type="text/css">
        %endif
    %else:
        <link href="/assets/css/rst.css" rel="stylesheet" type="text/css">
        <link href="/assets/css/code.css" rel="stylesheet" type="text/css">
        <link href="/assets/css/styles.css" rel="stylesheet" type="text/css">
        %if has_custom_css:
            <link href="/assets/css/custom.css" rel="stylesheet" type="text/css">
        %endif
    %endif

    % if needs_ipython_css:
        <link href="/assets/css/ipython.min.css" rel="stylesheet" type="text/css">
        <link href="/assets/css/nikola_ipython.css" rel="stylesheet" type="text/css">
    % endif
</%def>

<%def name="html_feedlinks()">
    %if rss_link:
        ${rss_link}
    %elif generate_rss:
        %if len(translations) > 1:
            %for language in sorted(translations):
                <link rel="alternate" type="application/rss+xml" title="RSS (${language})" href="${_link('rss', None, language)}">
            %endfor
        %else:
            <link rel="alternate" type="application/rss+xml" title="RSS" href="${_link('rss', None)}">
        %endif
    %endif
    %if generate_atom:
        %if len(translations) > 1:
            %for language in sorted(translations):
                <link rel="alternate" type="application/atom+xml" title="Atom (${language})" href="${_link('index_atom', None, language)}">
            %endfor
        %else:
            <link rel="alternate" type="application/atom+xml" title="Atom" href="${_link('index_atom', None)}">
        %endif
    %endif
</%def>

<%def name="html_translations()">
    <ul class="translations">
    %for langname in sorted(translations):
        %if langname != lang:
            <li><a href="${abs_link(_link("root", None, langname))}" rel="alternate" hreflang="${langname}">${messages("LANGUAGE", langname)}</a></li>
        %endif
    %endfor
    </ul>
</%def>

## -*- coding: utf-8 -*-
<%inherit file="base.tmpl"/>
<%namespace name="ui" file="crumbs.tmpl" import="bar"/>
<%block name="content">
<div class="site__listing theme-card mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
        ${ui.bar(crumbs)}
        %if folders or files:
        <ul>
        % for name in folders:
            <li><a href="${name|u}"><i class="icon-folder-open"></i> ${name|h}</a>
        % endfor
        % for name in files:
            <li><a href="${name|u}.html"><i class="icon-file"></i> ${name|h}</a>
        % endfor
        </ul>
        %endif
        % if code:
            ${code}
        % endif
        % if source_link:
            <p class="sourceline"><a href="${source_link}" id="sourcelink">${messages("Source")}</a></p>
        % endif
    </div>
</div>
</%block>
